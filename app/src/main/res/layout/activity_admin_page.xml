<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgound"
    android:orientation="vertical"
    tools:context=".Activity.AdminPageActivity">
    <Button
        android:id="@+id/btBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/baseline_arrow_back_ios_24"
        android:textColor="#FFFAFA" />

    <TextView
        android:id="@+id/tvLogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:text="Cài Đặt"
        android:textColor="#F1EEEE"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:text="Quản Trị Viên"
        android:textColor="#F1EEEE"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btUpload"
        android:layout_width="341dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/corner_button_black"
        android:backgroundTint="#F1F1F1"
        android:hint="Đăng Truyện"
        android:padding="12dp"
        android:textColorHint="#111111"
        android:visibility="gone"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/btEdit"
        android:layout_width="341dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/corner_button_black"
        android:backgroundTint="#F1F1F1"
        android:hint="Chỉnh Sửa Truyện"
        android:padding="12dp"
        android:textColorHint="#111111"
        android:visibility="gone"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/btUploadChap"
        android:layout_width="341dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/corner_button_black"
        android:backgroundTint="#F1F1F1"
        android:hint="Đăng Chap Truyện"
        android:padding="12dp"
        android:visibility="gone"
        android:textColorHint="#111111"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/btEditUser"
        android:layout_width="341dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/corner_button_black"
        android:backgroundTint="#F1F1F1"
        android:hint="Chỉnh Sửa Người Dùng"
        android:padding="12dp"
        android:textColorHint="#111111"
        android:visibility="gone"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/btEditChapter"
        android:layout_width="341dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:hint="Chỉnh sửa Chapter"
        android:background="@drawable/corner_button_black"
        android:backgroundTint="#F1F1F1"
        android:padding="12dp"
        android:textColorHint="#111111"
        android:visibility="gone"
        android:textSize="20sp"
        android:textStyle="bold"/>
</LinearLayout>