<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/profile_bglogin"
    android:orientation="vertical"
    app:layout_anchorGravity="center"
    tools:context=".Activity.SignInActivity">


    <Button
        android:id="@+id/btback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/baseline_arrow_back_ios_24"
        android:textColor="#FFFAFA" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="GreenToon"
        android:textColor="#F1EEEE"
        android:textSize="30sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edlogin"
        android:layout_width="341dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="46dp"
        android:background="@drawable/borderinput"
        android:hint="Email"
        android:padding="12dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#858080"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/edPassword"
        android:layout_width="346dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:background="@drawable/borderinput"
        android:hint="Pasword"
        android:padding="12dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#858080"
        android:textSize="20sp" />


    <Button
        android:id="@+id/btLogin"
        android:layout_width="354dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:background="@drawable/round_coners"
        android:backgroundTint="#1ed760"
        android:text="Đăng Nhập"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btForget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@android:color/transparent"
        android:backgroundTint="@color/purple_700"
        android:text="Bạn quên mật khẩu?"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btSignUp"
        android:layout_width="323dp"
        android:layout_height="42dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:background="@android:color/transparent"
        android:backgroundTint="@color/white"
        android:text="Create a account"
        android:textColor="@color/white" />

</LinearLayout>