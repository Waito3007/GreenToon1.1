<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgound"
    android:orientation="vertical"
    tools:context=".Activity.EditProfileActivity">
    <Button
        android:id="@+id/btback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/baseline_arrow_back_ios_24"
        android:textColor="#FFFAFA" />
    <TextView
        android:id="@+id/tvLogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="GreenToon"
        android:textColor="#F1EEEE"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#F1EEEE"
        android:gravity="center"
        android:layout_marginTop="28dp"
        android:textStyle="bold"
        android:text="Tài Khoản" />

    <Button
        android:id="@+id/btUsername"
        android:layout_width="341dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="46dp"
        android:background="@drawable/borderinput"
        android:hint="Chỉnh sửa tên tài khoản"
        android:padding="12dp"
        android:textColorHint="#858080"
        android:textSize="20sp" />
    <Button
        android:id="@+id/btEmail"
        android:layout_width="341dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="6dp"
        android:background="@drawable/borderinput"
        android:hint="Chỉnh sửa Email"
        android:padding="12dp"
        android:textColorHint="#858080"
        android:textSize="20sp" />
    <Button
        android:id="@+id/btImg"
        android:layout_width="341dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="6dp"
        android:background="@drawable/borderinput"
        android:hint="Chỉnh sửa Avatar"
        android:padding="12dp"
        android:textColorHint="#858080"
        android:textSize="20sp" />
    <Button
        android:id="@+id/BtChangePas"
        android:layout_width="341dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="6dp"
        android:background="@drawable/borderinput"
        android:hint="Chỉnh sửa Mật Khẩu"
        android:padding="12dp"
        android:textColorHint="#858080"
        android:textSize="20sp" />
    <Button
        android:id="@+id/btMore"
        android:layout_width="341dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="6dp"
        android:background="@drawable/borderinput"
        android:hint="Admin"
        android:padding="12dp"
        android:textColorHint="#858080"
        android:visibility="gone"
        android:textSize="20sp" />
</LinearLayout>