<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/backgound"
    android:orientation="vertical"
    app:layout_anchorGravity="center"
    tools:context=".Activity.SignUpActivity">


    <Button
        android:id="@+id/btback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/baseline_arrow_back_ios_24"
        android:textColor="#FFFAFA" />

    <TextView
        android:id="@+id/tvGreentoon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="GreenToon"
        android:textColor="#F1EEEE"
        android:textSize="30sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edEmail"
        android:layout_width="341dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="46dp"
        android:background="@drawable/borderinput"
        android:hint="Nhập Email Của Bạn"
        android:padding="12dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#858080"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/edPassword"
        android:layout_width="346dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:background="@drawable/borderinput"
        android:hint="Nhập Mật Khẩu"
        android:inputType="textPassword"
        android:padding="12dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#858080"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/edConfirmPassword"
        android:layout_width="346dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:background="@drawable/borderinput"
        android:hint="Nhập Lại Mật Khẩu"
        android:inputType="textPassword"
        android:padding="12dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#858080"
        android:textSize="20sp" />

    <CheckBox
        android:id="@+id/cbProtocol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:background="#1ed760"
        android:foregroundGravity="center_vertical"
        android:gravity="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:visibility="gone" /> <!-- Đặt thuộc tính visibility là gone để ẩn CheckBox -->


    <Button
        android:id="@+id/btSignup"
        android:layout_width="354dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:background="@drawable/round_coners"
        android:backgroundTint="#1ed760"
        android:text="Đăng Kí"
        android:textSize="20sp"
        android:textStyle="bold" />


</LinearLayout>