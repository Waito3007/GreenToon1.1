<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgound"
    android:orientation="vertical"
    tools:context=".Activity.EditUsernameActivity">

    <Button
        android:id="@+id/btBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/baseline_arrow_back_ios_24"
        android:textColor="#FFFAFA" />

    <TextView
        android:id="@+id/tvLogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="GreenToon"
        android:textColor="#F1EEEE"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:gravity="center"
        android:text="Chỉnh sửa tên tài khoản"
        android:textColor="#F1EEEE"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edUsername"
        android:layout_width="341dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="46dp"
        android:background="@drawable/borderinput"
        android:hint="Nhập tên tài khoản bạn muốn đổi"
        android:padding="12dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#858080"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btSave"
        android:layout_width="341dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:background="@drawable/round_coners"
        android:backgroundTint="#1ed760"
        android:text="Lưu"
        android:textSize="20sp"
        android:textStyle="bold" />
</LinearLayout>