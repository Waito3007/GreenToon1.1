<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:foregroundGravity="center"
    app:layout_anchorGravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <Button
            android:id="@+id/btBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/baseline_arrow_back_ios_24"
            android:textColor="#FFFAFA" />
        <TextView
            android:id="@+id/tvtoonName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên Truyện"
            android:padding="20dp"
            android:gravity="center"
            android:textAllCaps="false"
            android:textColor="#111111"
            android:textSize="33sp"/>

        <ImageView
            android:id="@+id/imgtoonCover"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/default_avatar" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:text="Chọn Chapter"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textStyle="bold" />
        <Spinner
            android:id="@+id/spinnerChapterList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="Tên Chap"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextChapterName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/edittext_rounded_corner"
            android:backgroundTint="#F4E1E1"
            android:hint="Nhập Tên Chap"
            android:padding="8dp"
            android:textSize="14sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="Nhập Tiêu Đề"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextChapterTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/edittext_rounded_corner"
            android:backgroundTint="#F4E1E1"
            android:hint="Nhập tittle"
            android:padding="8dp"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btnChooseImages"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:background="@drawable/corner_button_black"
            android:backgroundTint="#57945C"
            android:gravity="center"
            android:text="Chọn ảnh bạn thay đổi"
            android:textColor="#FBFBFB" />

        <Button
            android:id="@+id/btnUpdateChapter"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:background="@drawable/corner_button_black"
            android:backgroundTint="#57945C"
            android:gravity="center"
            android:text="Chỉnh sửa"
            android:textColor="#FBFBFB" />

        <Button
            android:id="@+id/btnDeleteChapter"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:background="@drawable/corner_button_black"
            android:backgroundTint="#A10000"
            android:gravity="center"
            android:text="Xóa Chap đã chọn"
            android:textColor="#FBFBFB" />
    </LinearLayout>

</ScrollView>
