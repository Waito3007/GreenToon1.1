<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <ImageView
        android:id="@+id/imgStoryCover"
        android:layout_width="120dp"
        android:layout_height="160dp"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:background="@drawable/sliderimg2"
        android:scaleType="centerCrop" />

    <EditText
        android:id="@+id/edtStoryName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgStoryCover"
        android:layout_marginTop="16dp"
        android:hint="Tên truyện"
        android:inputType="text" />

    <EditText
        android:id="@+id/edtStoryGenre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edtStoryName"
        android:layout_marginTop="8dp"
        android:hint="Thể loại"
        android:inputType="text" />

    <EditText
        android:id="@+id/edtStoryDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edtStoryGenre"
        android:layout_marginTop="8dp"
        android:hint="Mô tả truyện"
        android:inputType="textMultiLine"
        android:lines="4" />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edtStoryDescription"
        android:layout_marginTop="16dp"
        android:text="Lưu" />

    <Button
        android:id="@+id/btnDelete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnSave"
        android:layout_marginTop="8dp"
        android:text="Xóa" />
</RelativeLayout>
