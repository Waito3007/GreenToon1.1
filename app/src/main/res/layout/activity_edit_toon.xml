<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.EditToonActivity">

    <EditText
        android:id="@+id/editTextToonName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="Toon Name"
        android:padding="8dp" />

    <EditText
        android:id="@+id/editTextToonDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextToonName"
        android:layout_marginTop="8dp"
        android:hint="Toon Description"
        android:padding="8dp" />

    <ImageView
        android:id="@+id/imageViewToonCover"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/editTextToonDesc"
        android:layout_marginTop="8dp"
        android:scaleType="centerCrop" />

    <Button
        android:id="@+id/btnChooseNewCover"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageViewToonCover"
        android:layout_marginTop="8dp"
        android:text="Choose New Cover" />

    <Button
        android:id="@+id/btnUpdateToon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnChooseNewCover"
        android:layout_marginTop="16dp"
        android:text="Update Toon" />

    <Button
        android:id="@+id/btnDeleteToon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnUpdateToon"
        android:layout_marginTop="8dp"
        android:text="Delete Toon" />

</RelativeLayout>
